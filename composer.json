{
	"name": "laravel/laravel",
	"description": "The Laravel Framework.",
	"keywords": ["framework", "laravel"],
	"license": "MIT",
	"require": {
		"laravel/framework": "4.1.*",
		"cartalyst/sentry": "2.0.*",
		"artdarek/oauth-4-laravel": "dev-master"
	},
    "require-dev": {
        "barryvdh/laravel-debugbar": "v1.4.3",
        "barryvdh/laravel-ide-helper": "v1.8.1",
        "way/generators": "2.*"
    },
	"autoload": {
		"classmap": [
			"app/commands",
			"app/controllers",
			"app/controllers/auth",
			"app/controllers/dashboard",
			"app/controllers/pictures",
			"app/controllers/profile",
			"app/controllers/pages",
			"app/controllers/surveys",
			"app/models",
			"app/database/migrations",
			"app/database/seeds",
			"app/tests/TestCase.php",
			"app/lib/exceptions",
			"app/lib/auth",
			"app/lib/social",
			"app/lib/social/facebook",
			"app/lib/social/instagram",
			"app/lib/uploader",
			"app/lib/profile",
			"app/lib/picture"
		]
	},
	"scripts": {
		"post-install-cmd": [
			"php artisan optimize"
		],
		"post-update-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-create-project-cmd": [
			"php artisan key:generate"
		]
	},
	"config": {
		"preferred-install": "dist"
	},
	"minimum-stability": "dev"
}
